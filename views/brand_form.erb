<h3>Fill out the info about a new brand</h3>

<form  action="/brands" method="post">
  <div class="form-group">
    <label for="name">Brand Name:</label>
    <input type="text" name="name" id="name">
  </div>
  <div class="form-group">
    <label for="type">Type of Shoes:</label>
    <input type="text" name="type" id="type">
  </div>
  <% if !@stores.any?%>
  <p><em>There are no stores added to Foot Unlocker yet</em></p>
  <% else %>
     <select class="form-control" name="ingredients">
       <% @stores.each do |store| %>
        <option value="<%store.id%>"><%= store.name %></option>
       <% end %>
  <% end %>
  <button class="btn btn-primary" type="submit" name="button">Add Brand</button>
</form>
